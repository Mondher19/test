<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivityAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="677dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/switchfragment"
                android:name="com.example.myapplication.HomeAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar5admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"


            android:background="#10454F"
            android:foregroundGravity="bottom"
            android:gravity="bottom"
            app:backgroundTint="#10454F"
            app:buttonGravity="center_vertical|bottom"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="10dp"
            app:subtitleTextColor="#FFFFFF"
            app:titleTextColor="#CCCCCC"
            tools:ignore="BottomAppBar,MissingConstraints">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationViewadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="16dp"
                android:background="@color/colorPrimary"
                android:foregroundGravity="bottom"
                android:hapticFeedbackEnabled="false"
                app:backgroundTint="@color/colorPrimary"
                app:itemIconTint="#BDE038"
                app:itemRippleColor="#BDE038"
                app:itemTextColor="#BDE038"
                app:menu="@menu/bottom_nav_admin_menu">


            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </com.google.android.material.bottomappbar.BottomAppBar>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>