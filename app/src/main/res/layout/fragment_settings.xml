<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/reclamation_background"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout

        android:layout_width="400dp"
        android:layout_height="533dp"


        android:layout_marginTop="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="340dp"
            android:layout_height="79dp"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:text="User Full Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/editprofilecard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView41"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"

                    app:srcCompat="@drawable/ic_baseline_account_box_24" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text="Edit Profile" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView412"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"

                    app:srcCompat="@drawable/ic_baseline_notifications_24" />

                <TextView
                    android:id="@+id/textView311"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text="Notifications" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Languages"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView411"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_language_24"
                    app:srcCompat="@drawable/ic_baseline_language_24"
                    tools:srcCompat="@drawable/ic_baseline_language_24" />

                <TextView
                    android:id="@+id/textView322"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Languages"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text="Languages" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/PrivatePolicy"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView421"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_account_box_24"
                    app:srcCompat="@drawable/ic_baseline_account_box_24"
                    tools:srcCompat="@drawable/ic_baseline_account_box_24" />

                <TextView
                    android:id="@+id/textView312"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-50dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text=" Private Policy"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:text=" Private Policy" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Logout"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_baseline_logout_24"
                    app:srcCompat="@drawable/ic_baseline_logout_24"
                    tools:srcCompat="@drawable/ic_baseline_logout_24" />

                <TextView

                    android:id="@+id/textView3"
                    android:layout_width="209dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-70dp"
                    android:contentDescription="Logout"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#E10909"
                    android:textStyle="bold"
                    tools:text="Logout" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>