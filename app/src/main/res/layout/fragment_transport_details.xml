<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reclamation_background"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    tools:context=".TransportDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout


        android:layout_width="412dp"
        android:layout_height="733dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backtn3"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="350dp"
            android:clickable="true"
            android:foregroundGravity="right"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />


        <androidx.cardview.widget.CardView
            android:layout_width="306dp"
            android:layout_height="402dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="30dp"
            android:background="#CD4646"
            android:backgroundTint="#818274"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <ImageView
                android:id="@+id/trasnportdetailimg"
                android:layout_width="251dp"
                android:layout_height="135dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:foregroundGravity="center_vertical"
                app:srcCompat="@drawable/busv2" />

            <TextView
                android:id="@+id/nameuser"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:layout_margin="0dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shedule"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="shedule"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailuser"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="destination"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/adresseuser"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Price"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>